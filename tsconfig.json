{
  "compilerOptions": {
    "target": "ES2020",                                
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,       
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",  
    "baseUrl": "./",    
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types", "src/shared/types"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
